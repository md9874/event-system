{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "api": ["api"],
      "context": ["context"],
      "components": ["components"],
      "icons": ["icons"],
      "images": ["images"],
      "layout": ["layout"],
      "pages": ["pages"],
      "reducers": ["reducers"],
      "router": ["router"],
      "styles": ["styles"],
      "types": ["types"],
      "utils": ["utils"],
      "hooks": ["hooks"]
    }
  }
}
